<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/home.css" />
  </head>
  <body>
    <h1>Register page (unauthenticated)</h1>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/games/42">Games 42</a></li>
      <li><a href="/lobby">Lobby</a></li>
      <li><a href="/profile">Profile</a></li>
      <li><a href="/authentication/login">Log In</a></li>
    </ul>
    <form method="post" action="/authentication/sign-up">
      <label>
        <em>Username</em>
        <input name="username" autocomplete="username" placeholder="Username" />
      </label>
      <label>
        <em>Email</em>
        <input name="email" autocomplete="email" placeholder="Email address" />
      </label>
      <label>
        <em>Password</em>
        <input name="password" type="password" autocomplete="new-password" />
      </label>
      <input type="submit" value="Register" />
    </form>
  </body>
</html>